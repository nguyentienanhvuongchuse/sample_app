<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "micropost.name" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <% provide(:title, t("home.name")) %>
  <% provide(:base_title, t("base.title")) %>
  <div class="center jumbotron">
  <h1><%=t "base.welcome" %></h1>
    <p>
      <%= t("home.content_home", href_base: link_to(t("base.content_href"), "https://www.railstutorial.org/")).html_safe %>
    </p>
    <%= link_to (t("base.register")), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
