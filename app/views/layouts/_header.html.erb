<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("home.sample_rails"), home_path , id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home.name"), home_path %></li>
        <li><%= link_to t("help.name"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("user.user"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "user.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("user.profile"), current_user %></li>
              <li><%= link_to t("user.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("user.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
          <% else %>
            <li><%= link_to t("user.name"), login_path %></li>
          <% end %>
      </ul>
    </nav>
  </div>
</header>
